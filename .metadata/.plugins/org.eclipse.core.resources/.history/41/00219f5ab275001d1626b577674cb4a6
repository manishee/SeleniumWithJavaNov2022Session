package SeleniumSessions;

import java.util.ArrayList;

/**
 * 
 * @author mchugh
 *This program is about Arrays
 */

public class ArrayConcepts {

	public static void main(String[] args) {

		
		//Array -> a collection of multiple values of similar type
		//two major limitations of array:
		//1. static array - size is fixed. -- to overcome this issue, we can use dynamic arrays(ArrayList)
		//2. it stores only similar data types - to overcome this issue, we can use object static array and ArrayList
		
		
		
		//int h=100;
		int i[]=new int[4];
		//i[-1]=30;//ArrayIndexOutOfBoundsException
		i[0]=10;
		i[1]=20;
		i[2]=30;
		i[3]=40;
		//i[4]=50;//ArrayIndexOutOfBoundsException
		
		System.out.println("li is " +0);
		System.out.println("length is " +i.length);
		System.out.println("hi = " + (i.length-1));
		
//		System.out.println(i[0]);
//		System.out.println(i[1]);
//		System.out.println(i[2]);
//		System.out.println(i[3]);
		
		//System.out.println(i[4]);//ArrayIndexOutOfBoundsException
		
		//For loop - print all the values from an array
		
//		int l=i.length; //4
//		
//		for(int p=0; p<l;p++)
//		{
//			System.out.println(i[p]);//10 20 30 40
//		}
		
		//For Each loop - print all the values from an array
		System.out.println("-------------");
		for(Integer k : i) {
			System.out.println(k);
		}
		System.out.println("-------------");
		double d[]=new double[2];
		d[0]=10.33;
		d[1]=34.44;
		
		for(Double f : d) {
			System.out.println(f);
		}
		System.out.println("-------------");
		float f[]=new float[2];
		f[0]=1.33f;
		f[1]=2.44f;
		
		for(Float g : f) {
			System.out.println(g);
		}
		System.out.println("-------------");
		char c[]=new char[5];
		c[0]='T';
		c[1]='i';
		c[2]='s';
		c[3]='h';
		c[4]='a';
		
		for(Character cx : c) {
			System.out.println(cx);
		}
		System.out.println("-------------");
		
		String student[]=new String[3];
		student[0]="Tom";
		student[1]="Megha";
		student[2]="Priya";
		//int l=student.length;
		for(int h=0; h<student.length;h++) {
			System.out.println(student[h]);
		}
		System.out.println("-------------");
		for(String h : student) {
			System.out.println(h);
		}
		
		//Object static Array
		//Object is the super class of all classes in java
		System.out.println("-------------");
		Object ob[]=new Object[5];
		ob[0]="Tom";
		ob[1]=25;
		ob[2]=12.33;
		ob[3]='m';
		ob[4]=true;
		
		for(int h=0;h<ob.length;h++) {
			System.out.println(ob[h]);
		}
		System.out.println("-------------");
		for(Object x : ob) {
			System.out.println(x);
		}
		
		ArrayList al=new ArrayList();
		System.out.println(al.size());
		
	}

}
