package SeleniumSessions;

/**
 * 
 * @author mchugh
 *This program is about Arrays
 */

public class ArrayConcepts {

	public static void main(String[] args) {

		
		//Array -> a collection of multiple values of similar type
		
		int i[]=new int[4];
		//i[-1]=30;//ArrayIndexOutOfBoundsException
		i[0]=10;
		i[1]=20;
		i[2]=30;
		i[3]=40;
		//i[4]=50;//ArrayIndexOutOfBoundsException
		
		System.out.println("li is " +0);
		System.out.println("length is " +i.length);
		System.out.println("hi = " + (i.length-1));
		
//		System.out.println(i[0]);
//		System.out.println(i[1]);
//		System.out.println(i[2]);
//		System.out.println(i[3]);
		
		//System.out.println(i[4]);//ArrayIndexOutOfBoundsException
		
		//For loop - print all the values from an array
		
//		int l=i.length; //4
//		
//		for(int p=0; p<l;p++)
//		{
//			System.out.println(i[p]);//10 20 30 40
//		}
		
		//For Each loop - print all the values from an array
		
		for(Integer k : i) {
			System.out.println(k);
		}
		
		double d[]=new double[2];
		d[0]=10.33;
		d[1]=23.22;
		
		for(Double f :d) {
			
			System.out.println(f);
		}
		
		float r[]=new float[2];
		r[0]=1.33f;
		r[1]=2.22f;
		
		for(Float f :r) {
			
			System.out.println(f);
		}
		
		char c1[]=new char[5];
		c1[0]='T';
		c1[1]='i';
		c1[2]='s';
		c1[3]='h';
		c1[4]='a';
		for(Character cx : c1) {
			System.out.print(cx);
		}
		
		
	}

}
